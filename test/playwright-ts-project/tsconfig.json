{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".", 
    "paths": {
      "@helpers/*": ["src/helpers/*"], 
      "@tests/*": ["src/tests/*"]     
    }
  },
  "include": ["src/**/*"], 
}